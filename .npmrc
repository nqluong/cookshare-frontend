# 📦 NPM Configuration for CookShare Team
# Mục đích: Đảm bảo tất cả devs sử dụng cùng phiên bản packages

# ✅ Sử dụng exact versions (không auto-update minor/patch)
save-exact=true

# 🔒 Lock dependencies - tránh install packages mới khi không cần
package-lock=true

# ⚠️ Engine strict - đảm bảo đúng Node version
engine-strict=false

# 🚫 Không tự động update package-lock.json
audit=false
fund=false

# 📌 Prefer offline - sử dụng cache khi có thể
prefer-offline=true

# 🔄 Legacy peer deps - cho phép install khi có minor peer dependency conflicts
legacy-peer-deps=true

